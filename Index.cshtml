
@{
    ViewBag.Title = "Index";
}
<script src="~/scripts/jquery.js"></script>
<h2>Index</h2>

<input type="button" value="Get Employee" id="btn1" />
<br />
<input type="text" placeholder="Enter Id" id="txt" />
<input type="button" value="Get Employee By Id" id="btn3" />
<input type="button" value="Clear" id="btn2" />
<br />
<div id="ShowData" >


</div>

<script>

    $(document).ready(function () {

        $("#btn3").click(function () {

            var id = $("#txt").val();
            $.getJSON('/api/EmployeeData/' + id, function (responseParameter) {
                var item = "<h2>" + responseParameter + "</h2>"
                $(item).appendTo("#ShowData");
            });
        });

        $("#btn2").click(function () {
            $("#ShowData").empty();
        });

        $("#btn1").click(function () {

            //$.getJson('api url', function());
            $.getJSON('/api/EmployeeData', function (responseData) {

                $.each(responseData, function (key, val) {

                    var item = "<h2>" + val + "</h2>"
                    $(item).appendTo("#ShowData");

                });
            });
        });

    });

</script>